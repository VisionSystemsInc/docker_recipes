#!/usr/bin/env bash

if [ -z ${VSI_COMMON_DIR+set} ]; then
  VSI_COMMON_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../../.."; pwd)"
fi

source "${VSI_COMMON_DIR}/tests/testlib.bsh"
source "${VSI_COMMON_DIR}/tests/test_utils.bsh"

: ${GIT=git}

command -v "${GIT}" &> /dev/null || skip_next_test
begin_test "Git LFS"
(
  setup_test

  # Check that git-lfs is "installed"
  check_str "$(docker run --rm vsiri/test_recipe:test_git-lfs bash -c 'git config --system filter.lfs.process')" "git-lfs filter-process"
)
end_test
